@page
@model Fizz.Pages_History.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].Result)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].UserID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FizzBuzz)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Result)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>

                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    @if (item.UserID != null && item.UserID == User.Identity.Name)
                    {
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
